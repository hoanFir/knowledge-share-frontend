
.wx-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.wx-dialog{
  position: fixed;
  z-index: 5000;
  width: 80%;
  box-sizing: border-box;
  max-width: 600rpx;
  top: 50%; left: 50%;
  padding: 10rpx;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 5px;
  box-shadow: 0rpx 0rpx 5rpx black;
  overflow: hidden;
}

.wx-dialog-title{
  font-size: 0.8em;
  font-weight: bold;
  color: rgb(180, 180, 180);
  padding: 15px 15px 5px;
  text-align: left;
}

.wx-dialog-input{
  padding: 15px 15px 5px;
  min-height: 40px;
  font-size: 16px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999999;
}

.wx-dialog-input input{
  border-bottom: 1px solid gray;
}

.wx-dialog-action {
  float: right;
}

.wx-dialog-action-btn {
  margin: 0rpx 5rpx;
  border: 1px solid rgb(200, 200, 200) !important;
}