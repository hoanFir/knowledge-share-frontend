<!--pages/UserCenter/UserCenter.wxml-->
<view class="center-container">

	<view class="header">
		<image class="avatar" src="{{userInfo.avatarUrl}}" />
		<view class="nickname">{{userInfo.nickName}}</view>
	</view>

	<view class="section">
		<view class="line" bindtap='commentTap'>我的评价</view>
		<view class="line" bindtap='collectionTap'>我的收藏</view>
	</view>
	<view class="section">
		<view class="line" bindtap='moneyTap'>我的钱包<text class="tl">余额：￥0</text></view>
	</view>
	<view class="section">
		<view class="line" bindtap='shareTap'>邀请有奖</view>
		<view class="line" bindtap='merchantTap'>商家入驻</view>
	</view>
	<view class="section">
		<view class="line" bindtap='helpTap'>帮助与反馈</view>
		<view class="line" bindtap='customerServiceTap'>在线客服<text class="tl">9:00 - 23:00</text></view>
	</view>

</view>

