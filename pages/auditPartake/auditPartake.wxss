/* pages/activityProfile/activityProfile.wxss */
.profile-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 头像和昵称 */
.header-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
  background-color: #fbf9fe;
  justify-content: center;
}

.header-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.header-nickname {
  color: #40586d;
  font-size: 30rpx;
}

.header-activtiy {
  display: flex;
  justify-content: center;
}

/* 基本信息和高级信息展示 */
.basicinfo, .moreinfo {
  margin-bottom: 30rpx;
  padding: 30rpx 40rpx;
  border-bottom: 1px solid #ddd;
}

.flex {
    display: flex;
    flex-direction: column;
}

.flex-base-top {
    flex-direction: row;
}

.flex-warp-right {
    flex-direction: column;
}


.flex-warp-right-item {
    flex-direction: column;
    
}

.flex-msg-info {
    flex-direction: row;
}

.msg-avatar {
    width: 110px;
    height: 110px;
    margin-right: 15px;
}

.msg-info-name {
    font-size: 17px;
    font-weight: bold;
    color: #333;
}

.little-text {
    font-size: 14px;
    color: #767676;
}

.icon-12px {
    width: 12px;
    height: 12px;
    margin-right: 10px;
}


.text-info {
    font-size: 12px;
    margin-right: 10px;
}

.msg-info-other {
    margin-top: 20rpx;
}

/* 个人简介 */
.kuIntro {
  display: block;
  margin-bottom: 10px;
}

/* 按钮 */
.button-sp-area {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  width: 100%;
}

.mini-btn {
  margin: 4px 10rpx;
  box-shadow: 0 .05em .25em rgba(0,0,0,.5)
}