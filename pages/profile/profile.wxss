/* pages/profile/profile.wxss */
.profile-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.header-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
  background-color: #fbf9fe;
  justify-content: center;
  margin-bottom: 5px;
}

.header-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.header-nickname {
  color: #40586d;
  font-size: 30rpx;
}

.placeholder{
  color: white;
  margin: 0 5px;
  padding: 0 8px;
  text-align: center;
  background-color: #40586d;
  height: 2.3em;
  line-height: 2.3em;

  border-radius:3px;
  box-shadow: 0 5px 4px -4px gray;
}

.mySpeaker .myParticipation .myEnrollment {
  margin-bottom: 20px;
}

/* weui-flex */
.weui-flex {
  
	margin-bottom: 20rpx;
}

/* 用户中心 */
.icons {
  width: 100%;
  background-color: white;
	height: 450rpx;
	padding: 20rpx 10rpx;
	padding-bottom: 0;
}
.icons .title {
	position: relative;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 2;
	margin-bottom: 20rpx;
}
.icons swiper-item {
	width: 100%;
}
.icons .icon {
	float: left;
	display: -webkit-flex;
	flex-direction: column;
	flex-wrap: wrap;
	width: 33%;
	text-align: center;
	margin: 10rpx 0;
}
.icons .icon image {
	margin: 0 auto;
	width: 100rpx;
	height: 100rpx;
}
.icons .icon text {
	color: #000;
	font-size: 24rpx;
	line-height: 2;
}