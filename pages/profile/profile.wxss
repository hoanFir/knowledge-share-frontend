/* pages/profile/profile.wxss */
.profile-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.header-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
  background-color: #fbf9fe;
  justify-content: center;
  margin-bottom: 5px;
}

.header-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.header-nickname {
  color: #40586d;
  font-size: 30rpx;
}

.placeholder{
  color: white;
  margin: 0 5px;
  padding: 0 8px;
  text-align: center;
  background-color: #40586d;
  height: 2.3em;
  line-height: 2.3em;

  border-radius:3px;
  box-shadow: 0 5px 4px -4px gray;
}

.mySpeaker .myParticipation .myEnrollment {
  margin-bottom: 20px;
}