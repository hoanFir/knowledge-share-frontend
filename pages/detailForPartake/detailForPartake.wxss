/* pages/detailForPartake/detailForPartake.wxss */

.page__hd {
  box-shadow: 0 .05em .25em rgba(0,0,0,.5);
}

.weui-cells_after-title {
  margin: 0 auto;
  width: 100%;
  border-radius: 7px;
  padding: 30rpx 20rpx;
}

/* 底部按钮 */
.flex-wrp {
  display: flex;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
}

.flex-item {
  background: #40586d;
  color: #fff;
  text-align: center;
  width: 50%;
  border-radius: 0px;
}

/* modal */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 99999;
    opacity: 0;
    transition: opacity 400ms ease-in;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal .dialog {
    width: 84%;
    height: 18%;
    background-color: #eceff4;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 19rpx;
}

.dialog .modal-item {
    height: 33.3%;
    width: 100%;
}

.modal-button {
    height: 100rpx;
    margin-bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.modal-button view {
    width: 50%;
    border-top: 1px solid #E5E7ED;
    display: flex;
    justify-content: center;
    align-items: center;
}