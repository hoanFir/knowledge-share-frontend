/* pages/activity/detail.wxss */
page {
  padding-bottom: 50px;
}

.last-div {
  margin-bottom: 100px;
}

.page__hd {
  box-shadow: 0 .05em .25em rgba(0,0,0,.5);
}

/* 底部按钮 */
.flex-wrp {
  display: flex;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
}

.flex-item {
  background: #40586d;
  color: #fff;
  text-align: center;
  width: 33%;
  border-radius: 0px;
}

/* 摘要和内容 */
.list-abstract, .list-title {
  margin: 0 40rpx;
  position: relative;
  height: auto;
  border-bottom:1rpx solid #e5e5e5;
  padding: 20rpx 0;
  text-align: left;
  font-size: 34rpx;
  color: black;
}
.list-abstract text, .list-title text  {
  display: block;
  font-size: 24rpx;
  color: #999;
}
