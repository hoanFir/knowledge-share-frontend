/* pages/activity/activity.wxss */

/* 发起讲座 */
.add-deliver {
  position: fixed;
  z-index: 7;
  bottom: 90rpx; right: 90rpx;
}

.add-deliver image {
  width: 70rpx; height: 70rpx;
}

/* navbar */
.weui-tab__content {
    text-align: center;
}

/* 讲座瀑布流 */
.activity {
  margin-bottom: 30rpx;
  background: #fff;padding: 0 60rpx;
  height: 440rpx;
  box-shadow: 0 .05em .25em rgba(0,0,0,.5);
  border-radius: 6rpx;
}
.activity-header{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  border-bottom: 1rpx solid #F0F5FA;
}
.activity-header view{
  text-align: center;
}
.activity-header text, .activity-header view{
  display: block;
}
.activity-header .start, .activity-header .end{
  width: 200rpx;
}
.activity-header .header-avatar{
  width: 80rpx; height: 80rpx;
  border-radius: 50%;
}
.activity-header .header-nickname{
  font-size: 28rpx;
  color: #666;
}
.activity-header .distance{
  margin: 0px 10px;
  width: 180rpx;
}
.activity-header .distance image, .activity-header .distance .image{
  width: 176rpx; height: 40rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
}
.activity-header .distance text{
  color:#8FAACC;
  line-height: 24rpx;
  font-size: 24rpx;
}
.activity-header .province{
  font-size: 28rpx;
  color: #666;
}

/* 标题和摘要 */
.list-title {
  position: relative;
  height: 40rpx;
  border-bottom: 1rpx solid #F0F5FA;
  padding: 20rpx 0;
  font-size: 34rpx;
  color: black;
}

.list-abstract {
  position: relative;
  height: 120rpx;
  border-bottom: 1rpx solid #F0F5FA;
  padding: 20rpx 0;
  text-align: left;
  font-size: 24rpx;
  color: #666;
}

.list-title text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-abstract text {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: black;
}

/* 搜索 */
.weui-search-bar {
  width: 100%;
  margin-bottom: 5rpx;
}