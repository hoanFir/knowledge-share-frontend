/* pages/activity/activity.wxss */

/* addDeliver */
.add-deliver {
  position: fixed;
  z-index: 7;
  border-radius: 50%;
  bottom: 70rpx; right: 80rpx;
  height: 100rpx; width: 100rpx;
  background-color: rgba(100, 100, 100, 0.5);

  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.add-deliver-button {
  width: 100%;
  border-radius: 50%;
  color: white;
  box-sizing: border-box;
}

.add-deliver-icon {
  position: relative;
  left: 28rpx;
  top: -12rpx;
  font-size: 2em;
}

/* modal */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 99999;
    opacity: 0;
    transition: opacity 400ms ease-in;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal .dialog {
    width: 84%;
    height: 18%;
    background-color: #eceff4;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 19rpx;
}

.dialog .modal-item {
    height: 33.3%;
    width: 100%;
}

.modal-button {
    height: 100rpx;
    margin-bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.modal-button view {
    width: 50%;
    border-top: 1px solid #E5E7ED;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* navbar */
.weui-tab__content {
    padding-top: 10px;
    text-align: center;
}

/* activityList */
.activities {
  background: #f9f9f9;
  /* padding: 30rpx 30rpx 0 30rpx; */
}
.activity { 
  margin-bottom: 30rpx;
  background: #fff;padding: 0 60rpx;
  height: 440rpx;
  box-shadow: 0 .05em .25em rgba(0,0,0,.5);
  border-radius: 6rpx;
}

.activity-header{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 180rpx;
  border-bottom: 1rpx solid #F0F5FA;
}
.activity-header view{
  text-align: center;
}
.activity-header text, .activity-header view{
  display: block;
}
.activity-header .start, .activity-header .end{
  width: 150rpx;
}
.activity-header .header-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.activity-header .header-nickname{
  font-size: 28rpx;
  color: #666;
}
.activity-header .distance{
  margin: 0px 10px;
  display: block;
  width: 176rpx;
}
.activity-header .distance image, .activity-header .distance .image{
  width: 176rpx;
  height: 30rpx;
  margin-bottom:1 2rpx;
  overflow: hidden;
}
.activity-header .distance text{
  color:#8FAACC;
  line-height: 24rpx;
  font-size: 24rpx;
}
.activity-header .province{
  font-size: 28rpx;
  color: #666;
}

.list-title {
  position: relative;
  height: 40rpx;
  border-bottom: 1rpx solid #F0F5FA;
  font-size: 24rpx;
  padding: 20rpx 0;
}

.list-abstract {
  position: relative;
  height: 100rpx;
  border-bottom: 1rpx solid #F0F5FA;
  font-size: 24rpx;
  padding: 20rpx 0;
}

.list-title text {
  color: #666;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-abstract text {
  color: #666;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}